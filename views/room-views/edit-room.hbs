<form action="/rooms/{{_id}}/edit-room" method="post">

    <label for="nameId">Name</label>

    <input type="text" name="name" id="nameId" value="{{name}}">

    <label for="descriptionId">Description</label>

    <input type="text" name="description" id="descriptionId" value="{{description}}">
    
    <label for="imageId">Image</label>

    <input type="text" name="imageUrl" id="imageId" value="{{imageUrl}}">

<button type="submit">Edit Room</button>

</form>